
<div class="card row p-0 w-50">
      <h2 class="card-header text-center text-secondary">Edit Device</h2>

        <div class="card-body text-center mt-4">
          <form class="edit-post-form text-center">
              <div class="form-group row">
                <input type="text" id="origin" name="name" class="form-control col m-2" value="{{post.name}}" placeholder="Name"/>
              </div>
              <div class="form-group row">
                <input type="number" id="destination" name="device" class="form-control col m-2" value="{{post.device}}" placeholder="Device ID"/>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn m-4 col border-success p-0 w-25"><i class="bi bi-save text-success"></i></button>
              <button type="button" class="btn delete-post-btn m-4 col border-danger p-0 w-25"><i class="bi bi-trash text-danger"></i></button>
            </div>
          </form>
        </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>