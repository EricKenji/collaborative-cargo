<bod>
  <header class="mb-5">
    <h1 class="pt-4 mx-4">TrakPath</h1>
    {{#if loggedIn}}
    <p class="username mx-4 text-white small">Logged in as {{username}}</p>
    {{/if}}
    <nav class="navbar justify-content-around mt-5">
      {{#if loggedIn}}
      <a href="/" class="small">Devices</a>
      <a href="/add-device" class="small">Add Device</a>
      <a href="/map" class="small">Map</a>
      <button id="logout" class="small">Logout</button>
      {{else}}
      <a href="/login" class="small">Login</a>
      {{/if}}
    </nav>
  </header>


  <main class="container">
    <div class="p-0 row justify-content-around">
      {{{ body }}}
    </div>
  </main>

  
  {{#if loggedIn}}
